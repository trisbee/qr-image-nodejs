root = true

# Default file settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.js]
indent_style = space
indent_size = 2

[*.ts]
indent_style = space
indent_size = 4

[package.json]
indent_style = space
indent_size = 2

[*.yml]
indent_size = 4
indent_style = space

[*.md]
ij_wrap_on_typing = true
ij_any_wrap_long_lines = true
ij_visual_guides = 80
